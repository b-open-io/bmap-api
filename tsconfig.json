{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "types": ["node"],
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "include": [
    "./*.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./social/**/*.ts",
    "./queries/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "build",
    "**/dist/**"
  ]
}
