{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "types": ["node"],
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment"
  },
  "include": ["./**/*.ts", "./**/*.tsx", "./**/*.d.ts"],
  "exclude": ["node_modules"]
}
