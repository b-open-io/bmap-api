{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./social/**/*.ts",
    "./queries/**/*.ts",
    "./routes/**/*.ts",
    "./analytics/**/*.ts",
    "./schemas/**/*.ts",
    "./scripts/**/*.ts",
    "./middleware/**/*.ts",
    "./handlers/**/*.ts",
    "./utils/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "build", "**/dist/**"]
}
