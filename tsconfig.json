{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./build",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./*.ts", "./*.d.ts"],
  "exclude": ["node_modules"]
}
