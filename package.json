{
  "type": "module",
  "workspaces": ["packages/*"],
  "dependencies": {
    "@constl/orbit-db-types": "^1.2.9",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.0",
    "@napi-rs/canvas": "^0.1.70",
    "@orbitdb/core": "^1.0.2",
    "bmapjs": "^0.4.0",
    "bpu-ts": "^0.0.26",
    "chalk": "^5.4.1",
    "chart.js": "^4.4.9",
    "cli-spinner": "^0.2.10",
    "elysia": "^1.3.1",
    "lodash": "^4.17.21",
    "mongodb": "^6.16.0",
    "node-persist": "^3.1.3",
    "quickchart-js": "^3.1.3",
    "redis": "^4.7.1",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.14",
    "@types/lodash": "^4.17.17",
    "@types/node-persist": "^3.1.8",
    "dotenv": "^16.5.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "dev": "bun --watch index.ts",
    "start": "bun index.ts",
    "typecheck": "bun --bun tsc --noEmit --skipLibCheck --excludeDirectories node_modules",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "lint:unsafe": "bunx @biomejs/biome check --write --unsafe .",
    "test-redis": "bun scripts/test-redis.ts",
    "prepare-hooks": "cp git-hooks/* .git/hooks/ && chmod +x .git/hooks/*",
    "migrate:b-data": "bun run scripts/migrate-b-data-to-content.ts",
    "build:types": "bun scripts/build-types.ts && cd packages/types && bun run build",
    "publish:types": "cd packages/types && npm publish"
  }
}
